# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL='http://localhost:3000'
NEXT_PUBLIC_APP_NAME='QuickCarousals'

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Example: postgresql://user:password@localhost:5432/database
# For Vercel Postgres: Use the POSTGRES_URL from your Vercel project settings
POSTGRES_URL='postgresql://user:password@localhost:5432/quickcarousals'

# -----------------------------------------------------------------------------
# Authentication (Clerk)
# -----------------------------------------------------------------------------
# Get these from https://dashboard.clerk.com
# Create a new application and copy the API keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY='pk_test_...'
CLERK_SECRET_KEY='sk_test_...'
CLERK_WEBHOOK_SECRET='whsec_...'

# Clerk redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL='/en/login-clerk'
NEXT_PUBLIC_CLERK_SIGN_UP_URL='/en/register'
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL='/dashboard'
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL='/dashboard'

# -----------------------------------------------------------------------------
# Authentication (NextAuth - Legacy)
# -----------------------------------------------------------------------------
# Generate a secret: openssl rand -base64 32
NEXTAUTH_URL='http://localhost:3000'
NEXTAUTH_SECRET='generate-a-random-secret-key-here'

# GitHub OAuth (if using NextAuth with GitHub provider)
GITHUB_CLIENT_ID='your-github-oauth-client-id'
GITHUB_CLIENT_SECRET='your-github-oauth-client-secret'

# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY='re_...'
RESEND_FROM='noreply@yourdomain.com'

# -----------------------------------------------------------------------------
# AI (OpenAI)
# -----------------------------------------------------------------------------
# Get your API key from https://platform.openai.com/api-keys
# Used for carousel content generation and rewrite actions
OPENAI_API_KEY='sk-...'
OPENAI_MODEL='gpt-4o'
OPENAI_MAX_TOKENS='4096'

# -----------------------------------------------------------------------------
# Payments (Stripe)
# -----------------------------------------------------------------------------
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_API_KEY='sk_test_...'
STRIPE_WEBHOOK_SECRET='whsec_...'
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY='pk_test_...'

# QuickCarousals Pricing Tiers
# Free tier: 3 carousels/month, 8 slides max, watermark (no Stripe product needed)
# Creator tier: $15/mo - 30 carousels/month, 15 slides max, no watermark, all style kits
# Pro tier: $39/mo - Unlimited carousels, 20 slides max, custom fonts, priority exports
# 
# After creating products in Stripe Dashboard, add the price IDs here:
NEXT_PUBLIC_STRIPE_CREATOR_PRODUCT_ID='prod_...'
NEXT_PUBLIC_STRIPE_CREATOR_PRICE_ID='price_...'
NEXT_PUBLIC_STRIPE_PRO_PRODUCT_ID='prod_...'
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID='price_...'

# -----------------------------------------------------------------------------
# Analytics (PostHog)
# -----------------------------------------------------------------------------
# Get your project API key from https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY='phc_...'
NEXT_PUBLIC_POSTHOG_HOST='https://app.posthog.com'

# -----------------------------------------------------------------------------
# Error Tracking (Sentry)
# -----------------------------------------------------------------------------
# Get these from https://sentry.io
SENTRY_DSN='https://...@sentry.io/...'
SENTRY_AUTH_TOKEN='...'

# -----------------------------------------------------------------------------
# Admin Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of admin email addresses
ADMIN_EMAIL='admin@yourdomain.com'

# -----------------------------------------------------------------------------
# Storage (Cloudflare R2 / S3)
# -----------------------------------------------------------------------------
# For carousel exports, logos, and custom fonts
# Cloudflare R2 (recommended):
R2_ACCOUNT_ID='your-account-id'
R2_ACCESS_KEY_ID='your-access-key'
R2_SECRET_ACCESS_KEY='your-secret-key'
R2_BUCKET_NAME='quickcarousals'
R2_PUBLIC_URL='https://your-bucket.r2.dev'

# Alternative: AWS S3
# AWS_ACCESS_KEY_ID='...'
# AWS_SECRET_ACCESS_KEY='...'
# AWS_S3_BUCKET='quickcarousals'
# AWS_S3_REGION='us-east-1'

# -----------------------------------------------------------------------------
# Storage (Supabase - Optional)
# -----------------------------------------------------------------------------
# Get these from your Supabase project settings -> API
NEXT_PUBLIC_SUPABASE_URL='https://your-project.supabase.co'
NEXT_PUBLIC_SUPABASE_ANON_KEY='your-anon-key'
SUPABASE_SERVICE_ROLE_KEY='your-service-role-key'

# -----------------------------------------------------------------------------
# Redis (Upstash)
# -----------------------------------------------------------------------------
# Get these from https://console.upstash.com
# Used for caching and job queue (BullMQ)
UPSTASH_REDIS_REST_URL='https://your-redis.upstash.io'
UPSTASH_REDIS_REST_TOKEN='your-rest-token'

# Alternative: Standard Redis URL (if not using Upstash)
# REDIS_URL='redis://localhost:6379'

# -----------------------------------------------------------------------------
# Development
# -----------------------------------------------------------------------------
# Enable NextAuth debug mode (set to true for debugging)
IS_DEBUG='false'
